<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_details"
    tools:context=".OrderDetails">

    <TextView
        android:id="@+id/order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Order Details"
        android:textColor="#0E0E0E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="312dp"
        android:layout_height="122dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/items"
                android:background="@drawable/border"
                android:padding="3dp"
                android:text="Item"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantity"
                android:background="@drawable/border"
                android:gravity="center"
                android:padding="3dp"
                android:text="Quantity"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/food_item1"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="item1"
                android:inputType="text"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />

            <EditText
                android:id="@+id/food_quantity1"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="1"
                android:inputType="number"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/food_item2"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="item2"
                android:inputType="text"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />

            <EditText
                android:id="@+id/food_quantity2"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="1"
                android:inputType="number"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/food_item3"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="item3"
                android:inputType="text"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />

            <EditText
                android:id="@+id/food_quantity3"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="1"
                android:inputType="number"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <EditText
                android:id="@+id/food_item4"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="item4"
                android:inputType="text"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />

            <EditText
                android:id="@+id/food_quantity4"
                android:autofillHints="number"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="1"
                android:inputType="number"
                android:padding="3dp"
                android:text=""
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="315dp"
        android:layout_height="110dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:padding="3dp"
                android:text="Sub Total"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sub_total_amount"
                android:gravity="end"
                android:padding="3dp"
                android:text="Rs.1590" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:padding="3dp"
                android:text="Discount Amount"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/discount"
                android:gravity="end"
                android:padding="3dp"
                android:text="Rs.0.0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <TextView
                android:padding="3dp"
                android:text="Total Amount"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total"
                android:gravity="end"
                android:padding="3dp"
                android:text="Rs.1570" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

</androidx.constraintlayout.widget.ConstraintLayout>